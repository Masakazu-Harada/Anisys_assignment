<h1>従業員一覧</h1>

<nav class="nav justify-content-end">
  <%= link_to '戻る', root_path, class: 'nav-link' %> 
</nav>

<%= link_to '従業員登録', new_admin_employee_path, class: 'btn btn-primary' %>

<div class="mb-3">
  <table class="table table-hover">
    <thead class="thead-default">
      <tr>
        <th><%= Employee.human_attribute_name(:full_name) %></th>
        <th><%= Employee.human_attribute_name(:log_in_id) %></th>
        <th><%= Employee.human_attribute_name(:admin) %></th>
        <th><%= Employee.human_attribute_name(:created_at) %></th>
        <th><%= Employee.human_attribute_name(:updated_at) %></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to employee.full_name, [:admin, employee] %></td>
          <td><%= employee.log_in_id %></td>
          <td><%= employee.admin? ? 'あり' : 'なし' %></td>
          <td><%= l employee.created_at %></td>
          <td><%= l employee.updated_at %></td>
          <td>
            <%= link_to '編集', edit_admin_employee_path(employee), class: 'btn btn-primary mr-3' %>
            <%= link_to '削除', [:admin, employee], method: :delete, data: {turbo_method: :delete, turbo_confirm: '削除しますか？'}, class: 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
