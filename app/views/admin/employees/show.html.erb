<h1>従業員の詳細</h1>

<nav class="nav justify-content-end">
  <%= link_to '従業員一覧へ戻る', admin_employees_path, class: 'nav-link' %> 
</nav>

<table class="table table-hover">
  <tbody>
    <tr>
      <th><%= Employee.human_attribute_name(:id) %></th>
      <td><%= @employee.id %></td>
    </tr>
    <tr>
      <th><%= Employee.human_attribute_name(:full_name) %></th>
      <td><%= @employee.full_name %></td>
    </tr>
    <tr>
      <th><%= Employee.human_attribute_name(:log_in_id) %></th>
      <td><%= @employee.log_in_id %></td>
    </tr>
    <tr>
      <th><%= Employee.human_attribute_name(:admin) %></th>
      <td><%= @employee.admin? ? 'あり' : 'なし' %></td>
    </tr>
    <tr>
      <th><%= Employee.human_attribute_name(:created_at) %></th>
      <td><%= l @employee.created_at %></td>
    </tr>
    <tr>
      <th><%= Employee.human_attribute_name(:updated_at) %></th>
      <td><%= l @employee.updated_at %></td>
    </tr>
  </tbody>
</table>
